<h1 class="mb-3">Spa Services</h1>

<form class="row g-2 mb-3">
  <div class="col-auto">
    <input
      name="q"
      class="form-control"
      placeholder="Search massages, treatments..."
      value="{{q}}"
    >
  </div>
  <div class="col-auto">
    <button class="btn btn-primary">Search</button>
  </div>
  {{#if q}}
    <div class="col-12">
      <small>{{count}} result(s) for “{{q}}”</small>
    </div>
  {{/if}}
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
  {{#each services}}
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="mb-0"><strong>{{this.durationMins}} min</strong> · ${{this.basePrice}}</p>
          {{#if this.tags}}
          <small class="text-muted">Tags: {{this.tags}}</small>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
