<h1 class="mb-3">Manage Therapists</h1>

<a href="/admin/therapists/new" class="btn btn-success mb-3">Add Therapist</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialties</th>
      <th>Experience</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each therapists}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.specialties}}</td>
      <td>{{this.yearsExperience}} years</td>
      <td class="text-end">
        <a href="/admin/therapists/{{this._id}}/edit" class="btn btn-sm btn-primary">Edit</a>
        <a href="/admin/therapists/{{this._id}}/delete" class="btn btn-sm btn-outline-danger">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
